{
  "icon": "logo.png",
  "name": "devtracker",
  "displayName": "DevTracker (Beta)",
  "description": "Local-first developer activity tracker with diffs, history & revert. Beta version.",
  "version": "0.9.5",
  "publisher": "GenomorphPvtLtd",
  "preview": true,
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Agent1092/devTracker.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:devtracker.home",
    "onCommand:devtracker.showLocalSummary",
    "onCommand:devtracker.openHistoryPanel",
    "onCommand:devtracker.openRecentDiff",
    "onCommand:devtracker.reportIssue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "DevTracker",
      "properties": {
        "devtracker.notifications.daily": {
          "type": "boolean",
          "default": true,
          "description": "Show a daily popup on VS Code startup with yesterdayâ€™s work summary."
        },
        "devtracker.notifications.startup": {
          "type": "boolean",
          "default": true,
          "description": "Show a popup on VS Code startup with your last session summary."
        },
        "devtracker.notifications.weekly": {
          "type": "boolean",
          "default": true,
          "description": "Show a weekly popup on VS Code startup every Monday with last week stats."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devtracker",
          "title": "DevTracker",
          "icon": "resources/activitybar.png"
        }
      ]
    },
    "views": {
      "devtracker": [
        {
          "type": "webview",
          "id": "devtracker.home",
          "name": "DevTracker",
          "icon": "resources/activitybar.png"
        }
      ]
    },
    "keybindings": [
      {
        "command": "devtracker.openHistoryPanel",
        "key": "ctrl+shift+h",
        "when": "editorTextFocus"
      },
      {
        "command": "devtracker.showLocalSummary",
        "key": "ctrl+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "devtracker.showLocalSummary",
        "title": "DevTracker: Show Local Summary"
      },
      {
        "command": "devtracker.whatsNew",
        "title": "DevTracker: What's New"
      },
      {
        "command": "devtracker.openRecentDiff",
        "title": "DevTracker: Open Diff From Recent Snapshot"
      },
      {
        "command": "devtracker.openHistoryPanel",
        "title": "DevTracker: Open History Panel"
      },
      {
        "command": "devtracker.reportIssue",
        "title": "DevTracker: Report Issue / Feedback"
      },
      {
        "command": "devtracker.bulkRevertWizard",
        "title": "DevTracker: Bulk Revert (Folder)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "express": "^5.2.1",
    "sql.js": "^1.13.0"
  }
}